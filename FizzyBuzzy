const fizzybuzz = function(){
    for (let i=1; i<=100;i++){
        let fizz = i % 3,
            buzz = i % 5;
        if (fizz === 0){
            console.log("fizz")
        }else if(buzz === 0){
            console.log("buzz")
        }else if(fizz===0 && buzz===0){
            console.log("fizzbuzz")
        }else{console.log(i)}
    }
}

fizzybuzz();

