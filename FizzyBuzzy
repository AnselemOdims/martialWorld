const  fizzybuzzy = () => {
let numArr = [];
for(let count=1; count<=100; count++){
numArr.push(count);
}
let newArr = numArr.map(num => {
if (num % 3 ===0 && num % 5 ===0){
return "FizzBuzz"}
else if (num % 3 ===0 && num % 5 !==0){
return "Fizz"}
else if (num % 3 !==0 && num % 5 ===0){
return "Buzz"}
else{return num}
});
console.log(newArr);
};






















